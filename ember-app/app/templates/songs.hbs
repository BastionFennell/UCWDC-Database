<div class="row songs">
  <div class="col-md-2 filters">
    <div class="row">
      Filter by Dance:
      {{view "select" content=danceTypes value=danceFilter}}
    </div>
    <div class="row">
      Filter by BPM:
      {{input value=bpmStart placeholder="90" action="filter" size=4}}
      -
      {{input value=bpmEnd placeholder="120" action="filter" size=4}}
    </div>
    <div class="row">
      <button {{action "filter"}}> Filter </button>
      <button {{action "clear"}}> Clear </button>
    </div>
  </div>

  <div class="col-md-10 song-list">
    <div class="row">
      <h5>{{filteredSongs.length}} {{songOrSongs}} found</h5>
    </div>
    {{#each song in filteredSongs}}
      <div class="song row">
        <div class="col-md-2"><h2>{{#link-to "song" song}}{{song.name}}{{/link-to}}</h2></div>
        <div class="col-md-2"><h4>{{song.artist}}</h4></div>
        <div class="col-md-2"><h4>{{song.dance}}</h4></div>
        <div class="col-md-2"><h4>{{song.length}} minutes</h4></div>
        <div class="col-md-2"><h4>{{song.bpm}} bpm</h4></div>
      </div>
    {{/each}}
  
  </div>
</div>
